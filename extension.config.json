{
  "$schema": "./src/node_modules/@microsoft/azureportal-build/lib/definitions/extension.config.schema.json",
  "name": "mf_host",
  "deployment": {
    "generationType": "rp"
  },
  "devServer": {
    "sideLoadTarget": {
      "view": "HelloWorld.ReactView",
      "baseUrl": "https://localhost:55555/Portal"
    }
  },
  "build": {
    "moduleFederation": [{
      "name": "host",
      "remotes": {        
        "myRemote1": "remoteTest1",
        "myRemote2": "remoteTest2",
        "myRemote3": "remoteTest3"
      }
    }]
  },
  "environment": {
    "deepmergeProperties": [
      "ArgBrowseOptions",
      "features",
      "moduleMappings"
    ],
    "*": {
      "enablePortalLogging": true,
      "armApiVersion": "2014-04-01",
      "reflowReadyDefault": true,
      "trustedDomains": [],
      "argbrowseoptions": {
        "MyResource": "Force"
      },
      "moduleMappings": {
        "remoteTest1": "https://localhost:3000/mfremote/Content/0.0.0/remoteEntry1.js"
      }
    },
    "df.onecloud.azure-test.net": {
      "moduleMappings": {
        "remoteTest2": "https://localhost:3000/mfremote/Content/0.0.0/remoteEntry2.js"
      }
    },
    "onestb.cloudapp.net": {},
    "portal.azure.cn": {
      "moduleMappings": {
        "remoteTest3": null
      }
    },
    "portal.azure.com": {
      "features": {
        "regionSegments": true
      },
      "moduleMappings": {
        "someKey": "someValue"
      }
    },
    "portal.azure.us": {},
    "localhost#55555": {}
  }
}