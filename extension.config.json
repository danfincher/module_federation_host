{
  "$schema": "./src/node_modules/@microsoft/azureportal-build/lib/definitions/extension.config.schema.json",
  "name": "mf_host",
  "deployment": {
    "generationType": "rp"
  },
  "devServer": {
    "sideLoadTarget": {
      "view": "HelloWorld.ReactView"
    },
    "port": 3001
  },
  "build": {
    "moduleFederation": [{
      "name": "host",
      "remotes": {        
        "myRemote1": "remoteTest1",
        "myRemote2": "remoteTest2",
        "myRemote3": "remoteTest3"
      }
    }]
  },
  "environment": {
    "deepmergeProperties": [
      "ArgBrowseOptions",
      "features"
    ],
    "*": {
      "enablePortalLogging": true,
      "armApiVersion": "2014-04-01",
      "reflowReadyDefault": true,
      "trustedDomains": [],
      "argbrowseoptions": {
        "MyResource": "Force"
      },
      "moduleMappings": {
        "remoteTest1": "https://localhost:3000/mfremote/Content/0.0.0/remoteEntry1.js",
        "remoteTest3": null,
        "remoteTest2": null
      }
    },
    "df.onecloud.azure-test.net": {
      "moduleMappings": {
        "remoteTest2": "https://localhost:3000/mfremote/Content/0.0.0/remoteEntry2.js"
      }
    },
    "onestb.cloudapp.net": {},
    "portal.azure.cn": {},
    "portal.azure.com": {
      "features": {
        "regionSegments": true
      }
    },
    "portal.azure.us": {}
  }
}